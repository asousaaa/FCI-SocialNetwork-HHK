<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ff2981b4">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/username"
        android:textSize="32sp"
        android:enabled="false"
        android:textColor="#ff000000"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="22dp"
        android:id="@+id/textView3" />

    <EditText
        android:id="@+id/username_registration"
        android:layout_width="375dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:maxHeight="50dp"
        android:maxWidth="400dp"
        android:inputType="text"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/email"
        android:layout_marginTop="45dp"
        android:textSize="32sp"
        android:enabled="false"
        android:textColor="#ff000000"

        android:id="@+id/textView2"
        android:layout_below="@+id/username_registration"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/email_registration"
        android:inputType="textEmailAddress"
        android:layout_width="375dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:maxHeight="50dp"
        android:maxWidth="400dp"


        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/password_registration"
        android:layout_alignStart="@+id/password_registration" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/password"
        android:textSize="32sp"
        android:enabled="false"
        android:textColor="#ff000000"
        android:id="@+id/textView"


        android:layout_below="@+id/email_registration"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp" />

    <EditText
        android:id="@+id/password_registration"
        android:layout_width="375dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:maxHeight="50dp"
        android:maxWidth="400dp"
        android:inputType="textPassword"

        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/RegistrationButton"
        android:layout_alignStart="@+id/RegistrationButton" />

    <Button
        android:id="@+id/RegistrationButton"
        android:text="@string/sign_up"
        android:layout_width="375dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:background="@drawable/round_button_singup"
        android:maxHeight="50dp"
        android:maxWidth="400dp"
        android:textSize="24sp"
        android:typeface="serif"
        android:layout_centerInParent="true"
        android:layout_marginBottom="31dp"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp" />


</RelativeLayout>
