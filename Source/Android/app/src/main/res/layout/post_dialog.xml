<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/chat"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fff0edec"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:weightSum="1">


    <EditText
        android:id="@+id/post_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:background="#fff7f4f3"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="5dp"
        android:hint="What's in your mind?"
        android:maxLines="5"
        android:minLines="5" />

    <Button
        android:id="@+id/Post_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:padding="5dp"
        android:layout_margin="5dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/post_content"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/ic_action_chat"
        android:text="post" />


    <EditText
        android:id="@+id/post_feel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/Post_button"
        android:layout_marginBottom="4dp"
        android:layout_marginRight="4dp"

        android:layout_toEndOf="@+id/textView4"
        android:layout_toLeftOf="@+id/Post_button"
        android:hint="Feeling eg:happy"
        android:maxLines="1"
        android:background="#fff7f4f3"
        android:minLines="1"
        android:padding="010dp"

        android:layout_alignLeft="@+id/post_content"
        android:layout_alignStart="@+id/post_content" />

</RelativeLayout>