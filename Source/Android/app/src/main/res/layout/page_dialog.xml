<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/chat"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff0edec"
    android:orientation="vertical"
    android:weightSum="1">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/imageView2"
        android:background="@drawable/page_backgraund"
       >

        <TextView
            android:id="@+id/page_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Page name"
            android:textSize="22sp"
            android:maxLines="1"
            android:padding="5dp"
            android:textColor="#ffffff"
            android:layout_alignRight="@+id/pageviewbutton"
            android:layout_alignEnd="@+id/pageviewbutton"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Page owner"
            android:textSize="15sp"
            android:padding="5dp"
            android:textColor="#ffffff"
            android:id="@+id/page_owner"

            android:layout_below="@+id/page_name"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Page category"
            android:textSize="22sp"
            android:padding="5dp"
            android:id="@+id/page_category"
            android:textColor="#000000"
            android:layout_above="@+id/pagelike"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:drawableRight="@drawable/ic_action_good"
            android:background="@android:color/transparent"
            android:id="@+id/pagelike"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View"
            android:textStyle="bold"
            android:textSize="25sp"
            android:padding="5dp"
           android:textColor="#ffffff"
            android:background="@android:color/transparent"
            android:id="@+id/pageviewbutton"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        </RelativeLayout>

</RelativeLayout>