<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/chat"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <requestFocus />

    <TextView
        android:id="@+id/titel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:background="@android:color/holo_blue_dark"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:text="New"
        android:textAppearance="?android:attr/textAppearanceLarge" />


    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_above="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/titel"
        android:layout_marginLeft="0dp"
        android:background="#fff0edec">

        <ScrollView
            android:id="@+id/friend_View"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_below="@+id/friend_header"
            android:background="#bcffffff">


            <TableLayout
                android:id="@+id/friendtable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:shrinkColumns="*"
                android:stretchColumns="*">

            </TableLayout>
        </ScrollView>
    </RelativeLayout>

    <requestFocus />

    <EditText
        android:id="@+id/groupname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/button"
        android:hint="Write message"
        android:maxLines="1"
        android:minLines="1">


    </EditText>

    <ImageButton
        android:id="@+id/button"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/groupname"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
        android:src="@drawable/ic_action_send_now"
        android:text="New Button" />


</RelativeLayout>