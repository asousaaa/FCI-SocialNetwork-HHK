<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/splash3"
    android:orientation="vertical">


    <Button
        android:id="@+id/signUp"
        android:layout_width="375dp"
        android:layout_height="90dp"
        android:layout_above="@+id/login"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginBottom="33dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/round_button_singup"
        android:maxHeight="50dp"
        android:maxWidth="400dp"
        android:text="@string/sign_up"
        android:textSize="24sp"
        android:typeface="serif" />

    <Button
        android:id="@+id/login"
        android:layout_width="375dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"

        android:layout_gravity="center"
        android:layout_marginBottom="31dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/round_button_login"
        android:maxHeight="50dp"
        android:maxWidth="400dp"
        android:text="@string/login"
        android:textSize="24sp"
        android:typeface="serif" />


    <TextView
        android:id="@+id/viewText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="66dp"
        android:editable="false"
        android:enabled="false"
        android:inputType="none"
        android:text="Welcome"
        android:textColor="#ffffffff"
        android:textSize="42dp" />

</RelativeLayout><!-- From: file:/C:/Users/hosam%20azzam/AndroidStudioProjects/FCI-SocialNetwork-HHK-android/app/src/main/res/layout/activity_main.xml -->