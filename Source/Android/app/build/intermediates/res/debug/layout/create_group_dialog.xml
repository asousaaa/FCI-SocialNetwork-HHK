<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:id="@+id/groupchatlayout">
    <requestFocus />

    <TextView
        android:id="@+id/titel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="New Group Chat"
        android:background="@android:color/holo_blue_dark"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:gravity="center_horizontal"
        android:padding="10dp"
        />


    <EditText
        android:id="@+id/groupname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minLines="1"
        android:maxLines="3"
        android:hint="Group name" >


    </EditText>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/friend_View"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@+id/friend_header"
        android:background="#bcffffff">


        <TableLayout
            android:id="@+id/friendtable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:shrinkColumns="*"
            android:stretchColumns="*">

        </TableLayout>
    </ScrollView>
    </RelativeLayout>
    <requestFocus />
</LinearLayout><!-- From: file:/C:/Users/Khaled/Desktop/SW_Project/FCI-SocialNetwork-HHK/Source/Android/app/src/main/res/layout/create_group_dialog.xml -->